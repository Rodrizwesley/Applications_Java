package entities;

public class Rectangle {
	
	public double width;
	public double height;
	
	public double area() {
		return width * height;		
	}

	public double perimeter() {
		return (2 * width) + (2 * height);
	}
	
	public double diagonal() {
		
		double height2 = Math.pow(height, 2); 
		double width2 = Math.pow(width, 2);
		double hip2 = height2 + width2;
		
		return Math.sqrt(hip2);
	}

	public String toString() {
		return String.format("AREA = ", area()) + String.format("\nPERIMETER = ", perimeter()) + String.format("\nDIAGONAL = ", diagonal()); 
	}
}



